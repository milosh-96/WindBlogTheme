@{
    // By using a tag builder, sub items can alter the
    // menu element. Note how Display is called on the menu
    // items before the tag is actually rendered.

    TagBuilder tag = Tag(Model, "nav");
    string classes = "hidden flex space-y-2 flex-col sm:flex sm:flex-row sm:justify-center sm:space-x-4 sm:space-y-0";
    tag.Attributes.Add("id","menu");
    tag.AddCssClass(classes);

    foreach (var item in Model.Items)
    {
        tag.InnerHtml.AppendHtml(await DisplayAsync(item));
    }
}

@tag