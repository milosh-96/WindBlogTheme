@inject IContentManager contentManager
@{
    string selectedContentId = (string)Model.ContentItem.Content.FeaturedPostWidget.SelectedContent.ContentItemIds[0];
    ContentItem selectedContent = await contentManager.GetAsync(selectedContentId);
    dynamic selectedContentType = null;
    string selectedContentDateOfPublish = ((DateTime)selectedContent.PublishedUtc).ToString("MMM dd, yyyy");
    switch(selectedContent.ContentType)
    {
        case "Article":
            selectedContentType = selectedContent.Content.Article;
            break;
        case "BlogPost":
            selectedContentType = selectedContent.Content.BlogPost;
            break;
    }

    string selectedContentImage = selectedContentType.Image.Paths[0];
    var selectedContentTags = selectedContentType.Tags;

}
<section class="bg-[#f5f0e6] py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
                <a href="/category/technology">
                    <p class="text-[#ef4444] text-sm font-semibold uppercase tracking-wide hover:underline">
                        Featured <i data-lucide="dot" class="inline-flex"></i>
                        @foreach(var termId in selectedContentTags.TermContentItemIds)
                        {
                            var item = await Orchard.GetTaxonomyTermAsync((string)selectedContentTags.TaxonomyContentItemId, (string)termId);
                            <span><a display-for="@item">@item.DisplayText</a></span>
                        }

                    </p>
                </a>
                <a href="/article/1">
                    <h1 class="text-4xl md:text-5xl font-bold text-[#1e3a8a] mt-4 mb-6 hover:text-[#ef4444] transition-colors">
                        @selectedContent.DisplayText
                    </h1>
                </a>
                <p class="text-xl text-gray-700 mb-6">
                    @(selectedContentType.Subtitle.Text ?? "")
                </p>
                <div class="flex items-center space-x-4 text-gray-600 mb-6">
                    <span>@selectedContent.Author</span><span> <i data-lucide="dot" class="inline-flex"></i></span><span>@selectedContentDateOfPublish</span><span> <i data-lucide="dot" class="inline-flex"></i></span><span>8 min read</span>
                </div>
                <a display-for="@selectedContent" class="inline-flex items-center bg-[#ef4444] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#dc2626] transition-colors">
                    Read Article
                    <!-- Arrow Icon -->
                    <i data-lucide="arrow-right"></i>
                </a>
            </div>
            @if(!string.IsNullOrEmpty(selectedContentImage))
            {
                <div>
                    <img asset-src="@selectedContentImage" alt="@selectedContent.DisplayText" class="rounded-lg shadow-2xl w-full" />
                </div>
            }
        </div>
    </div>
</section>

