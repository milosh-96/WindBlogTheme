@{
    ContentItem contentItem = Model.ContentItem;
    var content = contentItem.Content;
    string dateOfPublish = ((DateTime)contentItem.PublishedUtc).ToString("MMM dd, yyyy");
    string selectedContentImage = content.Article.Image.Paths[0];
    string primaryTextColorClass = await _siteService.GetPrimaryColorClassAsync("text");
}
<article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Title -->
    <h1 class="text-4xl md:text-5xl font-bold @primaryTextColorClass mt-4 mb-6">
        @contentItem.DisplayText
    </h1>

    <!-- Meta -->
    <div class="flex flex-wrap items-center gap-6 text-gray-600 mb-8 pb-8 border-b">
        <div class="flex items-center">
            <i data-lucide="user" class="w-5 h-5 mr-2"></i>
            <span>@contentItem.Author</span>
        </div>
        <div class="flex items-center">
            <i data-lucide="calendar" class="w-5 h-5 mr-2"></i>
            <span>@dateOfPublish</span>
        </div>
        <div class="flex items-center">
            <i data-lucide="clock" class="w-5 h-5 mr-2"></i>
            <span>8 min read</span>
        </div>
        <div class="ml-auto flex items-center gap-4">
            <button class="hover:text-[#ef4444] transition-colors">
                <i data-lucide="share-2" class="w-5 h-5"></i>
            </button>
            <button class="hover:text-[#ef4444] transition-colors">
                <i data-lucide="bookmark" class="w-5 h-5"></i>
            </button>
        </div>
    </div>

    <!-- Featured Image -->
    <img asset-src="@selectedContentImage"
         alt="Article featured"
         class="w-full rounded-lg mb-8" />

    <!-- Content -->
    <div class="prose prose-lg max-w-none">
        @Html.Raw((string)content.HtmlBodyPart.Html)
    </div>
</article>
