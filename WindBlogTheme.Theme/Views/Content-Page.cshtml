@{
    ContentItem contentItem = Model.ContentItem;
    var content = contentItem.Content;
    string primaryTextColorClass = await _siteService.GetPrimaryColorClassAsync("text");
}
<article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <!-- Title -->
    <h1 class="text-4xl md:text-5xl font-bold @primaryTextColorClass mt-4 mb-6">
        @contentItem.DisplayText
    </h1>

    <!-- Content -->
    <div class="prose prose-lg max-w-none">
        @await DisplayAsync(Model.Content.FlowPart)
    </div>
</article>
