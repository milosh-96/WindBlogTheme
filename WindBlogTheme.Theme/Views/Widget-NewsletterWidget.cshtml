@{
    ContentItem contentItem = Model.ContentItem;
    var newsletterWidget = contentItem.Content.NewsletterWidget;
    var primaryColor = await _siteService.GetPrimaryColorClassAsync();
}
<section class="@primaryColor py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">@contentItem.DisplayText</h2>
        <p class="text-gray-300 mb-8">
            @contentItem.Content.HtmlBodyPart.Html
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <input type="email" placeholder="Enter your email" class="px-6 py-3 rounded-lg flex-1 max-w-md" />
            <button class="bg-[#ef4444] text-white px-8 py-3 rounded-lg font-semibold hover:bg-[#dc2626] transition-colors">
                @newsletterWidget.ButtonLabel.Text
            </button>
        </div>
    </div>
</section>